package tp6;

public class Semaphore {
	
	int cpt;
	
	
	public Semaphore(){

	}
	
	public void init(int x){
		cpt = x;
	}
		 
	public void p() throws InterruptedException{
		if(cpt == 0){
			
			Object o = new Object();
			
			synchronized(o){
				synchronized(this){
					
				}
			}
		
		}
		this.wait();

	}
	
	synchronized void v() {}
		 
		
}


	public static void main(String[] args) {
		Semaphore s = new Semaphore();
			s.init(1);
			/* cr√©ation des threads */
			Thread t1 = new Thread();
			
	
	}